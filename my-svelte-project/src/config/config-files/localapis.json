{
  "global": {
    "version": 0.1
  },
  
  "httpClient": {
    "tokenKey": "myapp-token"
  },
  
  "apiClient": {
    "type": "live"
  },

  "items": {
    "apiUrls": {
      "fetchItems": "/path/to/your/real/LOCAL/api/and-point"
    }
  },

  "localization": {
    "apiUrls": {
      "fetchTranslation": "/path/to/your/real/LOCAL/api/and-poin/[namespace]/[key].json"
    },
    "locales": [
      { "key": "en-US", "isDefault": true },
      { "key": "it-IT", "isDefault": false },
      { "key": "fr-FR", "isDefault": false },
      { "key": "es-ES", "isDefault": false }
    ],
    "localStorageCache": { 
      "enabled": true, 
      "expirationInMinutes": 60
    }
  }
}
